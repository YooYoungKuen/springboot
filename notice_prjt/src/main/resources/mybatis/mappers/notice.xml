<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.human.notice.notice_prjt.repository.NoticeDAO">


    <resultMap id="noticeResult" type="com.human.notice.notice_prjt.vo.NoticeVO">
        <result property="nIdx" column="n_idx"/>
        <result property="nCategory" column="n_category"/>
        <result property="nTitle" column="n_title"/>
        <result property="nContent" column="n_content"/>
        <result property="nRegdate" column="n_regdate"/>
        <result property="nUpdate" column="n_update"/>
        <result property="nStatus" column="n_status"/>
    </resultMap>


    <select id="selectAllNotices" resultMap="noticeResult">
        SELECT
        n_idx,
        n_category,
        n_title,
        n_content,
        n_regdate,
        n_update,
        n_status
        FROM tb_notice
        ORDER BY n_idx DESC
    </select>

</mapper>